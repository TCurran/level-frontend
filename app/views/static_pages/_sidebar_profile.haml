      %h3{style: "margin-bottom:0"}
        %strong Username
      %p.no-margin-bottom @twittername | Location
      .row.collapse
        .small-4.columns.small-text-center
          .left
            .meta.meta-light Rank
            .meta.meta-dark 0
        .small-4.columns.small-text-center
          .left
            .meta.meta-light Followers
            .meta.meta-dark 0
        .small-4.columns.small-text-center
          .right
            .meta.meta-light Following
            .meta.meta-dark 0
